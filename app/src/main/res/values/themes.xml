<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnimeRecs" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Custom attributes for card views -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorSecondary">@color/text_secondary</item>
        
        <!-- Navigation components -->
        <item name="bottomNavigationStyle">@style/ModernBottomNavigationView</item>
        
        <!-- Status bar and system UI -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Widget styles -->
        <item name="materialButtonStyle">@style/StandardButton</item>
        <item name="chipStyle">@style/Widget.Material3.Chip.Input</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
    </style>

    <style name="Theme.AnimeRecs" parent="Base.Theme.AnimeRecs" />
    
    <style name="Theme.AnimeRecs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
    
    <style name="Theme.AnimeRecs.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    
    <!-- Traditional Splash Screen Theme -->
    <style name="Theme.AnimeRecs.Splash" parent="Theme.AnimeRecs.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>
</resources>