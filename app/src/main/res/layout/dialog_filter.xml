<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="?attr/cardBackgroundColor">

        <!-- Header with X and Reset buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="?attr/textColorPrimary"
                android:contentDescription="@string/cancel" />

            <Button
                android:id="@+id/reset_button"
                style="@style/TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/reset"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingVertical="4dp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Type Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />
                </LinearLayout>

                <!-- Status Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />
                </LinearLayout>

                <!-- Score Range Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_range"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/score_range_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.0"
                        android:valueTo="10.0"
                        app:values="@array/initial_slider_values"
                        android:stepSize="0.5"
                        app:trackColorInactive="@color/grey"
                        app:trackColorActive="?attr/colorAccent"
                        app:thumbColor="?attr/colorAccent" />
                </LinearLayout>

                <!-- Order By Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_by"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/order_by_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />
                </LinearLayout>

                <!-- Sort Order Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sort_order"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/sort_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />
                </LinearLayout>

                <!-- Genres Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genres"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/genres_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />
                </LinearLayout>

                <!-- Season (Anime Only) -->
                <LinearLayout
                    android:id="@+id/season_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/season_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/season"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/season_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Apply Button at Bottom -->
        <Button
            android:id="@+id/apply_button"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 