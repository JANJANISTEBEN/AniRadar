<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base dark theme -->
    <style name="Base.Theme.AnimeRecs" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorPrimaryVariant">@color/dark_primary_light</item>
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorError">@color/error</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:colorBackground">@color/dark_background</item>
        
        <!-- Custom attributes for card views -->
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="textColorPrimary">@color/dark_text_primary</item>
        <item name="textColorSecondary">@color/dark_text_secondary</item>
        
        <!-- Navigation components -->
        <item name="bottomNavigationStyle">@style/ModernBottomNavigationView</item>
        
        <!-- Status bar and system UI -->
        <item name="android:statusBarColor">@color/dark_primary_dark</item>
        <item name="android:navigationBarColor">@color/dark_primary</item>
        
        <!-- Widget styles -->
        <item name="materialButtonStyle">@style/StandardButton</item>
        <item name="chipStyle">@style/Widget.Material3.Chip.Input</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        
        <!-- Dark theme specific overrides -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>
    
    <style name="Theme.AnimeRecs" parent="Base.Theme.AnimeRecs" />
    
    <style name="Theme.AnimeRecs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/dark_primary_dark</item>
    </style>
    
    <style name="Theme.AnimeRecs.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="colorPrimary">@color/dark_accent</item>
        <item name="colorAccent">@color/dark_accent</item>
    </style>
    
    <!-- Traditional Splash Screen Theme -->
    <style name="Theme.AnimeRecs.Splash" parent="Theme.AnimeRecs.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/dark_primary_dark</item>
        <item name="android:navigationBarColor">@color/dark_primary_dark</item>
    </style>
</resources>